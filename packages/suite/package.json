{
  "name": "@getgrowly/suite",
  "version": "1.0.15",
  "repository": "https://github.com/growly-foundation/suite.git",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./styles.css": "./dist/styles.css",
    "./tailwind.css": "./dist/tailwind.css",
    "./theme": "./dist/styles/theme.js",
    "./provider": "./dist/styles/provider.js",
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./widgets": {
      "types": "./dist/widgets/index.d.ts",
      "module": "./dist/widgets/index.js",
      "import": "./dist/widgets/index.js",
      "default": "./dist/widgets/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "module": "./dist/hooks/index.js",
      "import": "./dist/hooks/index.js",
      "default": "./dist/hooks/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm bundle:prod && pnpm tailwind:prod",
    "bundle:dev": "NODE_ENV=development vite build --watch",
    "bundle:prod": "vite build",
    "clean": "rm -rf dist esm",
    "dev": "concurrently \"pnpm tailwind:dev\" \"pnpm bundle:dev\"",
    "format": "prettier --write .",
    "get-next-version": "node ./scripts/get-next-version.js",
    "publish-alpha": "node ./scripts/publish-alpha.js",
    "tailwind:dev": "tailwind -i ./src/styles/index-with-tailwind.css -o ./dist/styles.css --watch",
    "tailwind:prod": "tailwindcss -i ./src/styles/index.css -o ./dist/tailwind.css --minify && tailwindcss -i ./src/styles/index-with-tailwind.css -o ./dist/styles.css --minify",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "validate-build": "node ./scripts/validate-build.js"
  },
  "dependencies": {
    "@getgrowly/core": "workspace:*",
    "@getgrowly/ui": "workspace:*",
    "@hookform/resolvers": "^5.0.1",
    "@lottiefiles/dotlottie-react": "^0.13.5",
    "@radix-ui/react-accordion": "^1.2.8",
    "@radix-ui/react-alert-dialog": "^1.1.11",
    "@radix-ui/react-aspect-ratio": "^1.1.4",
    "@radix-ui/react-avatar": "^1.1.7",
    "@radix-ui/react-checkbox": "^1.2.3",
    "@radix-ui/react-collapsible": "^1.1.8",
    "@radix-ui/react-context-menu": "^2.2.12",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-hover-card": "^1.1.11",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-menubar": "^1.1.12",
    "@radix-ui/react-navigation-menu": "^1.2.10",
    "@radix-ui/react-popover": "^1.1.11",
    "@radix-ui/react-progress": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.3.4",
    "@radix-ui/react-scroll-area": "^1.2.6",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slider": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.2",
    "@radix-ui/react-tabs": "^1.1.9",
    "@radix-ui/react-toggle": "^1.1.6",
    "@radix-ui/react-toggle-group": "^1.1.7",
    "@radix-ui/react-tooltip": "^1.2.4",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tailwindcss/postcss": "^4.1.4",
    "@tanstack/react-query": "^5.74.11",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.5",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.9.2",
    "input-otp": "^1.4.2",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.503.0",
    "marked": "^15.0.11",
    "moment": "^2.30.1",
    "next-themes": "^0.4.6",
    "react-day-picker": "8.10.1",
    "react-hook-form": "^7.56.1",
    "react-lottie": "^1.2.10",
    "react-resizable-panels": "^2.1.9",
    "recharts": "^2.15.3",
    "sonner": "^2.0.3",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.1.0",
    "vaul": "^1.1.2",
    "viem": "~2.28.1",
    "wagmi": "^2.15.6",
    "zod": "^3.24.3",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "6.4.7",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/react-lottie": "^1.2.10",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "autoprefixer": "^10.4.21",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^8.2.2",
    "esbuild-fix-imports-plugin": "^1.0.19",
    "esbuild-plugin-babel": "^0.2.3",
    "glob": "^11.0.2",
    "globals": "^15.15.0",
    "jsdom": "^24.1.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^5.0.10",
    "rollup-plugin-preserve-use-client": "^3.0.1",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-scoped-preflight": "^3.4.12",
    "tscpaths": "^0.0.9",
    "tsup": "^8.4.0",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-externalize-deps": "^0.9.0",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "packageManager": "pnpm@10.6.3",
  "publishConfig": {
    "access": "public"
  }
}
